import React, { useState } from 'react';
import { View, TextInput, Text, TouchableOpacity, StyleSheet } from 'react-native';
import colors from '../theme/colors';
import { FakeBackend } from '../data/fakeBackend';

export default function UploadBookScreen({ route, navigation }) {
  const { user } = route.params;

  const [title, setTitle] = useState('');
  const [author, setAuthor] = useState(user.fullName);
  const [category, setCategory] = useState('');
  const [price, setPrice] = useState('');
  const [size, setSize] = useState('');

  const handleUpload = () => {
    FakeBackend.uploadBook({
      title,
      author,
      category,
      price: `₦${price}`,
      size: `${size} MB`,
      uploaderId: user.id,
    });

    navigation.goBack();
  };

  return (
    <View style={styles.container}>
      <Text style={styles.header}>Upload Book</Text>

      <TextInput placeholder="Book Title" style={styles.input} value={title} onChangeText={setTitle} />
      <TextInput placeholder="Category" style={styles.input} value={category} onChangeText={setCategory} />

      <TextInput placeholder="Price (₦)" style={styles.input} value={price} onChangeText={setPrice} keyboardType="numeric" />
      <TextInput placeholder="File Size (MB)" style={styles.input} value={size} onChangeText={setSize} keyboardType="numeric" />

      <TouchableOpacity style={styles.btn} onPress={handleUpload}>
        <Text style={styles.btnText}>Upload Book</Text>
      </TouchableOpacity>
    </View>
  );
}

const styles = StyleSheet.create({
  container: { flex: 1, padding: 20, backgroundColor: colors.white },
  header: { fontSize: 24, fontWeight: 'bold', color: colors.primary, marginBottom: 20 },

  input: {
    borderWidth: 1,
    borderColor: colors.primary,
    padding: 12,
    borderRadius: 8,
    marginBottom: 12,
  },

  btn: {
    backgroundColor: colors.primary,
    padding: 16,
    borderRadius: 8,
    marginTop: 10,
  },
  btnText: {
    color: colors.white,
    fontWeight: 'bold',
    textAlign: 'center',
  },
});
